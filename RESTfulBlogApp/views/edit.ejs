<% include ./partials/header %>
<!--Container -->
<div class="ui main text container segment">
    <!--Header -->
    <div class="ui huge header">Edit <%= blog.title %> </div>
    <!--FORM-->
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <!--Title Form-->
        <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%=blog.title %>">
        </div>
        <!--Image -->
        <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value="<%=blog.image %>">
        </div>
        <!--Blog content -->
        <div class="field">
        <label>Blog Content</label>
        <!--Big Text Area -->
        <textarea name="blog[body]"><%=blog.body %></textarea>
        </div>
        <input class="ui green basic button" type="submit">
    </form>
</div>

<% include ./partials/footer %>